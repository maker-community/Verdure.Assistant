<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="XiaoZhi.WinUI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:XiaoZhi.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题和连接状态 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="小智语音聊天客户端" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                <TextBlock Text="连接状态:" VerticalAlignment="Center"/>
                <TextBlock x:Name="ConnectionStatusText" 
                           Text="未连接" 
                           VerticalAlignment="Center"/>
                
                <Button x:Name="ConnectButton"
                        Content="连接"
                        Click="ConnectButton_Click"
                        Margin="10,0,0,0"/>
                
                <Button x:Name="DisconnectButton"
                        Content="断开连接"
                        Click="DisconnectButton_Click"
                        IsEnabled="False"
                        Margin="5,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- 控制面板 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15" Margin="0,0,0,20">
            <ToggleSwitch x:Name="EnableVoiceChatToggle"
                          Header="启用语音对话" 
                          IsOn="True"
                          IsEnabled="False"/>
            
            <Button x:Name="VoiceChatButton"
                    Content="开始语音对话"
                    Click="VoiceChatButton_Click"
                    IsEnabled="False"
                    MinWidth="120"/>
        </StackPanel>

        <!-- 消息列表 -->
        <ScrollViewer Grid.Row="2" 
                      Margin="0,0,0,20"
                      ZoomMode="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      VerticalScrollMode="Auto">
            <ListView x:Name="MessagesListView"
                      SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="MessageBorder"
                                CornerRadius="10"
                                Padding="15,10"
                                Margin="0,5">
                            <StackPanel>
                                <TextBlock x:Name="RoleText"
                                           FontSize="12"
                                           Opacity="0.8"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="ContentText"
                                           TextWrapping="Wrap"
                                           FontSize="14"/>
                                <TextBlock x:Name="TimestampText"
                                           FontSize="10"
                                           Opacity="0.6"
                                           HorizontalAlignment="Right"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <!-- 消息输入 -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="MessageTextBox"
                     Grid.Column="0"
                     PlaceholderText="输入消息..."
                     IsEnabled="False"
                     KeyDown="MessageTextBox_KeyDown"/>
            
            <Button x:Name="SendButton"
                    Grid.Column="1"
                    Content="发送"
                    Click="SendButton_Click"
                    IsEnabled="False"
                    Margin="10,0,0,0"
                    MinWidth="80"/>
        </Grid>
    </Grid>
</Page>
