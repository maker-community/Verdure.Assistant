<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="XiaoZhi.WinUI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:XiaoZhi.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  标题和连接状态  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                FontSize="28"
                FontWeight="Bold"
                Text="小智语音聊天客户端" />

            <StackPanel
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="10">
                <TextBlock VerticalAlignment="Center" Text="连接状态:" />
                <TextBlock
                    x:Name="ConnectionStatusText"
                    VerticalAlignment="Center"
                    Text="未连接" />

                <Button
                    x:Name="ConnectButton"
                    Margin="10,0,0,0"
                    Click="ConnectButton_Click"
                    Content="连接" />

                <Button
                    x:Name="DisconnectButton"
                    Margin="5,0,0,0"
                    Click="DisconnectButton_Click"
                    Content="断开连接"
                    IsEnabled="False" />
            </StackPanel>
        </StackPanel>

        <!--  控制面板  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="15">
            <ToggleSwitch
                x:Name="EnableVoiceChatToggle"
                Header="启用语音对话"
                IsEnabled="False"
                IsOn="True" />

            <Button
                x:Name="VoiceChatButton"
                MinWidth="120"
                Click="VoiceChatButton_Click"
                Content="开始语音对话"
                IsEnabled="False" />
        </StackPanel>

        <!--  消息列表  -->
        <ScrollViewer
            Grid.Row="2"
            Margin="0,0,0,20"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto"
            ZoomMode="Disabled">
            <ListView x:Name="MessagesListView" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            x:Name="MessageBorder"
                            Margin="0,5"
                            Padding="15,10"
                            CornerRadius="10">
                            <StackPanel>
                                <TextBlock
                                    x:Name="RoleText"
                                    Margin="0,0,0,5"
                                    FontSize="12"
                                    Opacity="0.8" />
                                <TextBlock
                                    x:Name="ContentText"
                                    FontSize="14"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    x:Name="TimestampText"
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Right"
                                    FontSize="10"
                                    Opacity="0.6" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <!--  消息输入  -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox
                x:Name="MessageTextBox"
                Grid.Column="0"
                IsEnabled="False"
                KeyDown="MessageTextBox_KeyDown"
                PlaceholderText="输入消息..." />

            <Button
                x:Name="SendButton"
                Grid.Column="1"
                MinWidth="80"
                Margin="10,0,0,0"
                Click="SendButton_Click"
                Content="发送"
                IsEnabled="False" />
        </Grid>
    </Grid>
</Page>
