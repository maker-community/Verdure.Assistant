                        <Setter Target="DashboardGrid.Margin" Value="0,0,0,12" />
                        <!--  Adjust voice control spacing  -->
                        <Setter Target="VoiceControlGrid.ColumnDefinitions[1].Width" Value="12" />
                    </VisualState.Setters>
