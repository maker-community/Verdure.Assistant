                        <Setter Target="SystemStatusCard.(Grid.Row)" Value="1" />
                        <Setter Target="EmotionStatusCard.(Grid.Column)" Value="0" />
                        <Setter Target="EmotionStatusCard.(Grid.Row)" Value="2" />

                        <!--  Adjust voice control layout  -->
                        <Setter Target="VoiceControlGrid.RowDefinitions[0].Height" Value="Auto" />
                        <Setter Target="VoiceControlGrid.RowDefinitions[1].Height" Value="Auto" />
                        <Setter Target="VoiceControlGrid.ColumnDefinitions[0].Width" Value="*" />
                        <Setter Target="VoiceControlGrid.ColumnDefinitions[1].Width" Value="0" />
                        <Setter Target="VoiceControlGrid.ColumnDefinitions[2].Width" Value="0" />
                        <Setter Target="VoiceControlPanel.(Grid.Column)" Value="0" />
                        <Setter Target="VoiceControlPanel.(Grid.Row)" Value="0" />
                        <Setter Target="ChatPanel.(Grid.Column)" Value="0" />
                        <Setter Target="ChatPanel.(Grid.Row)" Value="1" />

                        <!--  Compact styling for narrow screens  -->
                        <Setter Target="MainScrollViewer.Padding" Value="12" />
                        <Setter Target="HeaderSection.Margin" Value="0,0,0,8" />
                        <Setter Target="DashboardGrid.Margin" Value="0,0,0,8" />
                        <Setter Target="MusicCenter.Style" Value="{StaticResource CompactCardStyle}" />
                        <Setter Target="SystemStatusCard.Style" Value="{StaticResource CompactCardStyle}" />
                        <Setter Target="EmotionStatusCard.Style" Value="{StaticResource CompactCardStyle}" />
                        <Setter Target="VoiceControlPanel.Style" Value="{StaticResource CompactCardStyle}" />
                        <Setter Target="ChatPanel.Style" Value="{StaticResource CompactCardStyle}" />
                    </VisualState.Setters>
