                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  Adjust dashboard column layout for medium screens  -->
                        <Setter Target="DashboardGrid.ColumnDefinitions[0].Width" Value="1.2*" />
                        <Setter Target="DashboardGrid.ColumnDefinitions[2].Width" Value="1*" />
                        <Setter Target="DashboardGrid.ColumnDefinitions[4].Width" Value="0.8*" />
